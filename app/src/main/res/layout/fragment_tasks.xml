<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fragmentview.Tasks">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <!-- TODO: Update blank fragment layout -->
<Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_count"
        android:textColor="#ffffff"
        android:text=""
        android:gravity="start"
        android:textAlignment="gravity">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:textColor="#ffffff"
        android:gravity="end"
        android:textAlignment="gravity"
        android:layout_marginRight="10dp">

    </TextView>

</Toolbar>
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <TextView
            android:id="@+id/goals_for_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"
            android:text="Goals for the week"
            android:textColor="#000"
            android:textSize="14sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/add_goals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/goals_for_week"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:background="#808B96"/>

        <TextView
            android:id="@+id/accomplish_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="What did you accomplish today?"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/toady_accomplishment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Add toady's accomplishments"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="5dp"

            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tasks_resolved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Tasks Resolved"
            android:textColor="#000"

            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resolved_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add your resolved tasks"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:background="#808B96"/>

        <TextView
            android:id="@+id/obstacles"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"

            android:text="Any obstacles impending your tasks"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/obstacles_facing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Add any obstacles you are facing"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"

            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/any_ideas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="Any innovation/ideas that needs management attention"

            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/your_ideas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Your ideas/Innovation"

            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/any_awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"

            android:text="Any Appreciation/Awards Recieved"
            android:textColor="#000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/awards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:hint="Your Appreciation matters to us"
            android:imeOptions="actionDone"
            android:inputType="textMultiLine"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/btnsubmit_task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:text=" SUBMIT TASK"
        android:textStyle="bold"
        >

    </Button>

</LinearLayout>
</ScrollView>
